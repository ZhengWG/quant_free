{
  "name": "quant-free",
  "displayName": "QuantFree - 股票交易助手",
  "description": "VSCode股票交易管理插件，提供实时行情查看、AI驱动的交易策略推荐和自动化交易执行功能",
  "version": "0.1.0",
  "publisher": "zhengwg",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other",
    "Finance"
  ],
  "keywords": [
    "stock",
    "trading",
    "quantitative",
    "finance",
    "ai",
    "strategy"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quantFree.addStock",
        "title": "添加自选股",
        "category": "QuantFree"
      },
      {
        "command": "quantFree.removeStock",
        "title": "删除自选股",
        "category": "QuantFree"
      },
      {
        "command": "quantFree.generateStrategy",
        "title": "生成策略推荐",
        "category": "QuantFree"
      },
      {
        "command": "quantFree.placeOrder",
        "title": "下单",
        "category": "QuantFree"
      },
      {
        "command": "quantFree.viewPositions",
        "title": "查看持仓",
        "category": "QuantFree"
      },
      {
        "command": "quantFree.openChart",
        "title": "打开K线图",
        "category": "QuantFree"
      },
      {
        "command": "quantFree.runBacktest",
        "title": "策略回测",
        "category": "QuantFree"
      },
      {
        "command": "quantFree.openConfig",
        "title": "打开配置",
        "category": "QuantFree"
      }
    ],
    "views": {
      "quantFree": [
        {
          "id": "quantFree.marketData",
          "name": "实时行情",
          "when": "true"
        },
        {
          "id": "quantFree.strategy",
          "name": "策略推荐",
          "when": "true"
        },
        {
          "id": "quantFree.trade",
          "name": "交易",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quantFree",
          "title": "QuantFree",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "quantFree.marketData",
        "contents": "暂无自选股\n[添加自选股](command:quantFree.addStock)"
      },
      {
        "view": "quantFree.strategy",
        "contents": "暂无策略推荐\n[生成策略推荐](command:quantFree.generateStrategy)"
      },
      {
        "view": "quantFree.trade",
        "contents": "暂无持仓信息\n[下单交易](command:quantFree.placeOrder)\n[查看持仓](command:quantFree.viewPositions)"
      }
    ],
    "configuration": {
      "title": "QuantFree",
      "properties": {
        "quantFree.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "后端服务地址"
        },
        "quantFree.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "行情刷新间隔（毫秒）"
        },
        "quantFree.dataSource": {
          "type": "string",
          "enum": [
            "auto",
            "sina",
            "eastmoney",
            "tencent"
          ],
          "enumDescriptions": [
            "自动切换（Sina优先，失败自动备用）",
            "新浪财经API",
            "东方财富API",
            "腾讯财经API"
          ],
          "default": "auto",
          "description": "行情数据源选择"
        },
        "quantFree.aiModel": {
          "type": "string",
          "enum": [
            "deepseek",
            "openai",
            "claude",
            "ollama"
          ],
          "default": "deepseek",
          "description": "AI模型选择（推荐使用DeepSeek）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "dev": "npm run watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}
