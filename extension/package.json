{
  "name": "quant-free",
  "displayName": "QuantFree - 股票交易助手",
  "description": "VSCode股票交易管理插件，提供实时行情查看、AI驱动的交易策略推荐和自动化交易执行功能",
  "version": "0.1.0",
  "publisher": "zhengwg",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other",
    "Finance"
  ],
  "keywords": [
    "stock",
    "trading",
    "quantitative",
    "finance",
    "ai",
    "strategy"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quantFree.addStock",
        "title": "添加自选股"
      },
      {
        "command": "quantFree.removeStock",
        "title": "删除自选股"
      },
      {
        "command": "quantFree.generateStrategy",
        "title": "生成策略推荐"
      },
      {
        "command": "quantFree.placeOrder",
        "title": "下单"
      },
      {
        "command": "quantFree.viewPositions",
        "title": "查看持仓"
      },
      {
        "command": "quantFree.openChart",
        "title": "打开K线图"
      },
      {
        "command": "quantFree.openConfig",
        "title": "打开配置"
      }
    ],
    "views": {
      "quantFree": [
        {
          "id": "quantFree.marketData",
          "name": "实时行情",
          "when": "true"
        },
        {
          "id": "quantFree.strategy",
          "name": "策略推荐",
          "when": "true"
        },
        {
          "id": "quantFree.trade",
          "name": "交易",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": {
        "id": "quantFree",
        "title": "QuantFree",
        "icon": "resources/icon.svg"
      }
    },
    "configuration": {
      "title": "QuantFree",
      "properties": {
        "quantFree.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "后端服务地址"
        },
        "quantFree.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "行情刷新间隔（毫秒）"
        },
        "quantFree.aiModel": {
          "type": "string",
          "enum": [
            "deepseek",
            "openai",
            "claude",
            "ollama"
          ],
          "default": "deepseek",
          "description": "AI模型选择（推荐使用DeepSeek）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "dev": "npm run watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}

